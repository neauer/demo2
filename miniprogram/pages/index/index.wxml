<view class="indexContainer">
  <view class="margin-xl padding-xl bg-white radius shadow-lg">
  <view class="flex justify-center">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" class='cu-btn round bg-green shadow'>登录</button>
    <block wx:else>
      <view class='text-center'>
        <view class="cu-avatar xl round solids" style="background-image:url({{userInfo.avatarUrl}})"></view>
        <view class="padding">{{userInfo.nickName}}</view>
      </view>
    </block>
  </view>
</view>
<view class="text-center margin-top">
  <text class="text-grey text-xl">{{motto}}</text>
</view>
<view class="userMenu">
  <i-cell title="发出的订单" is-link url=""></i-cell>
  <i-cell title="接到的订单" is-link url=""></i-cell>
  <i-cell title="联系客服" is-link url=""></i-cell>
  <i-cell title="我的认证" is-link url="" bindtap="goIndentification"></i-cell>
</view>

</view>
